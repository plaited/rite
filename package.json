{
  "name": "@plaited/assert",
  "version": "1.0.5",
  "engines": {
    "node": ">= 14.2.0",
    "npm": ">= 6.14"
  },
  "main": "dist/assert.js",
  "module": "dist/assert.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "npx rollup --config",
    "lint": "eslint . --quiet --fix --ext .js",
    "lint:ci": "eslint .  --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run build",
    "prepare": "husky install",
    "test": "mocha --require esm",
    "test:ci": "c8 --check-coverage --statements 90 --branches 90 --functions 85 --lines 90 npm test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:ci && format-package -w"
    }
  },
  "types": "dist/assert.d.ts",
  "peerDependencies": {
    "mocha": "^8.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@plaited/utils": "^1.1.1",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "babel-loader": "^8.2.2",
    "c8": "^7.6.0",
    "chai": "^4.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "eslint-plugin-mocha": "^8.1.0",
    "esm": "^3.2.25",
    "fast-deep-equal": "^3.1.3",
    "format-package": "^6.1.0",
    "husky": "^5.1.3",
    "mocha": "^8.3.1"
  }
}
