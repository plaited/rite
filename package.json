{
  "name": "@plaited/rite",
  "version": "5.0.2",
  "license": "ISC",
  "engines": {
    "node": ">= v18.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plaited/rite.git"
  },
  "bugs": {
    "url": "https://github.com/plaited/rite/issues"
  },
  "homepage": "https://github.com/plaited/rite/tree/main#readme",
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "rite",
    "framework"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./assert": "./dist/assert.js",
    "./helpers": "./dist/helpers.js",
    "./framework": "./dist/framework.js"
  },
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs",
    "lint:fix": "yarn lint --fix --quiet",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "test": "bun run test:assert && bun run test:helpers",
    "test:assert": "bun test src/**/*.test.ts",
    "test:helpers": "bunx web-test-runner"
  },
  "lint-staged": {
    "*.(js|cjs|tsx|ts)": [
      "bun run lint:fix",
      "bun run prettier"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "browserslist": [
    "> 2%"
  ],
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@plaited/utils": "5.1.1",
    "@web/test-runner-core": "0.13.0"
  },
  "devDependencies": {
    "@plaited/eslint-prettier-config": "1.0.2",
    "@web/dev-server": "0.4.0",
    "@web/dev-server-esbuild": "1.0.0",
    "@web/test-runner": "0.18.0",
    "@web/test-runner-playwright": "0.11.0",
    "@commitlint/cli": "18.4.0",
    "@commitlint/config-conventional": "18.4.0",
    "@types/sinon": "17.0.1",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "bun-types": "1.0.11",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.53.0",
    "eslint-plugin-compat": "4.2.0",
    "eslint-config-prettier": "9.0.0",
    "format-package": "7.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "playwright": "1.39.0",
    "prettier": "^3.0.3",
    "sinon": "17.0.1",
    "typescript": "5.2.2"
  }
}
