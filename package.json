{
  "name": "@assembl-dev/assert",
  "version": "1.0.0",
  "engines": {
    "node": ">= 14.2.0",
    "npm": ">= 6.14"
  },
  "main": "dist/assert.js",
  "module": "dist/assert.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "npx rollup --config",
    "lint": "eslint . --quiet --fix --ext .js",
    "lint:ci": "eslint .  --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run build",
    "test": "mocha --require esm",
    "test:ci": "c8 --check-coverage  --statements 90 --branches 90 --functions 85 --lines 90 npm test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:ci && format-package -w"
    }
  },
  "types": "dist/assert.d.ts",
  "peerDependencies": {
    "mocha": "^8.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "babel-loader": "^8.2.2",
    "c8": "^7.3.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.14.0",
    "eslint-plugin-mocha": "^8.0.0",
    "esm": "^3.2.25",
    "fast-deep-equal": "^3.1.3",
    "format-package": "^6.1.0",
    "husky": "^4.3.0",
    "mocha": "^8.2.1"
  }
}
