{
  "name": "@plaited/assert",
  "version": "1.1.1",
  "engines": {
    "node": ">= 14.2.0",
    "npm": ">= 6.14"
  },
  "main": "dist/assert.js",
  "module": "dist/assert.js",
  "files": [
    "dist/assert.js",
    "assert.d.ts"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "esbuild assert.js --bundle --format=esm --outfile=dist/assert.js",
    "lint": "eslint . --quiet --fix --ext .js",
    "lint:ci": "eslint .  --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "npm run build",
    "prepare": "husky install",
    "test": "mocha",
    "test:ci": "c8 --check-coverage --statements 90 --branches 90 --functions 85 --lines 90 npm test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:ci && format-package -w"
    }
  },
  "types": "assert.d.ts",
  "type": "module",
  "peerDependencies": {
    "mocha": "^8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "c8": "^7.6.0",
    "chai": "^4.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.9.7",
    "eslint": "^7.21.0",
    "eslint-plugin-mocha": "^8.1.0",
    "esm": "^3.2.25",
    "format-package": "^6.1.0",
    "husky": "^5.1.3",
    "mocha": "^8.3.1"
  }
}
